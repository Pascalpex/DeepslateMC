+            line = line.replace("&f", "§f");
+            line = line.replace("&k", "§k");
+            line = line.replace("&l", "§l");
+            line = line.replace("&m", "§m");
+            line = line.replace("&n", "§n");
+            line = line.replace("&o", "§o");
+            line = line.replace("&r", "§r");
+            event.setLine(i, line);
+        }
+    }
